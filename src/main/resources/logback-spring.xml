<?xml version="1.0" encoding="UTF-8"?>
<!-- src/main/resources/logback-spring.xml -->
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- Console appender for local debugging -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Async wrapper for maximum performance -->
    <appender name="ASYNC_LOGSTASH" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="LOGSTASH_TCP"/>
        <queueSize>50000</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>false</includeCallerData>
        <neverBlock>true</neverBlock>
        <maxFlushTime>0</maxFlushTime>
    </appender>

    <!-- Root logger configuration -->
    <root level="INFO">
        <!-- Use ASYNC_LOGSTASH for TCP or LOGSTASH_UDP for UDP -->
        <appender-ref ref="ASYNC_LOGSTASH"/>
        <!-- Uncomment for local console output -->
         <appender-ref ref="CONSOLE"/>
    </root>

    <!-- Performance test logger with maximum throughput -->
<!--    <logger name="dev.dashaun.logstashdemo" level="INFO" additivity="false">-->
<!--        <appender-ref ref="ASYNC_LOGSTASH"/>-->
<!--    </logger>-->
</configuration>